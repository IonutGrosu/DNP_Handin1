@using Models

<div class="container-fluid">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-4" style="display: flex;
                                  	flex-direction: column;
                                  	flex-wrap: nowrap;
                                  	justify-content: space-between;
                                  	align-items: baseline;
                                  	align-content: stretch;">
            <h5>Eye color: @AdultToShow.EyeColor</h5>
            <h5>Hair color: @AdultToShow.HairColor</h5>
            <h5>Weight: @AdultToShow.Weight kg</h5>
            <h5>Sex: @AdultToShow.Sex</h5>
        </div>
        <div class="col-md-4">
            <img alt="@AdultToShow.FirstName @AdultToShow.LastName" class="img-fluid rounded" style="max-width: 75%; height: auto" src="@LoadImage()"/>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Adult AdultToShow { get; set; }

    private string LoadImage()
    {
        Random random = new Random();
        if (AdultToShow.Sex.Equals("M"))
        {
            string path = $"Images/male{random.Next(3) + 1}.png";
            return path;
        }
        else
        {
            string path = $"Images/female{random.Next(3) + 1}.png";
            return path;
        }
    }
}